<div
  class="col-2 border border-black border-3 rounded-4 align-items-center d-flex flex-column mx-auto mt-5"
  style="min-width: 300px; min-height: 400px;"
>
  <h2 class="m-4 fs-2">Login</h2>
  <form action="/login" method="POST">
    <div class="d-flex flex-column">
      <label class="m-2" for="username">Username</label>
      <input
        class="m-2"
        type="text"
        name="username"
        id="login-username"
        placeholder="Enter username"
      />
    </div>
    <div class="d-flex flex-column">
      <label class="m-2" for="password">Password</label>
      <input
        class="m-2"
        type="password"
        name="password"
        id="login-password"
        placeholder="Enter password"
      />
    </div>
    <div class="d-flex justify-content-center">
      <button id="login-btn" class="mt-5 mb-2" type="submit">Login</button>
    </div>
    <div class="d-flex justify-content-center">
      <a href="/signup">Sign up instead</a>
    </div>
  </form>
</div>
<script src="/js/login.js"></script>